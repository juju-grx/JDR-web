{% extends 'base.html.twig' %}

{% block title %}Race
{% endblock %}

{% block body %}
	<h1>Race</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ race.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ race.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ race.description }}</td>
			</tr>
			<tr>
				<th>Rate_physical_attack</th>
				<td>{{ race.ratePhysicalAttack }}</td>
			</tr>
			<tr>
				<th>Rate_magic_attack</th>
				<td>{{ race.rateMagicAttack }}</td>
			</tr>
			<tr>
				<th>Rate_physical_resistance</th>
				<td>{{ race.ratePhysicalResistance }}</td>
			</tr>
			<tr>
				<th>Rate_magic_resistance</th>
				<td>{{ race.rateMagicResistance }}</td>
			</tr>
			<tr>
				<th>Rate_physical_stamina</th>
				<td>{{ race.ratePhysicalStamina }}</td>
			</tr>
			<tr>
				<th>Rate_magic_stamina</th>
				<td>{{ race.rateMagicStamina }}</td>
			</tr>
			<tr>
				<th>Rate_speed</th>
				<td>{{ race.rateSpeed }}</td>
			</tr>
			<tr>
				<th>Max_size</th>
				<td>{{ race.maxSize }}</td>
			</tr>
			<tr>
				<th>Min_size</th>
				<td>{{ race.minSize }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('race_index') }}" class="btn btn-sg btn-primary">back to list</a>

	<a href="{{ path('race_edit', {'id': race.id}) }}" class="btn btn-sg btn-primary">edit</a>

	{{ include('race/_delete_form.html.twig') }}
{% endblock %}
