{% extends 'base.html.twig' %}

{% block title %}Element{% endblock %}

{% block body %}
    <h1>Element</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ element.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ element.description }}</td>
            </tr>
            <tr>
                <th>% attack physique</th>
                <td>{{ element.ratePhysicalAttack }}</td>
            </tr>
            <tr>
                <th>Rate_magic_attack</th>
                <td>{{ element.rateMagicAttack }}</td>
            </tr>
            <tr>
                <th>Rate_physical_resistance</th>
                <td>{{ element.ratePhysicalResistance }}</td>
            </tr>
            <tr>
                <th>Rate_magic_resistance</th>
                <td>{{ element.rateMagicResistance }}</td>
            </tr>
            <tr>
                <th>Rate_physical_stamina</th>
                <td>{{ element.ratePhysicalStamina }}</td>
            </tr>
            <tr>
                <th>Rate_magic_stamina</th>
                <td>{{ element.rateMagicStamina }}</td>
            </tr>
            <tr>
                <th>Rate_speed</th>
                <td>{{ element.rateSpeed }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ element.level }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('element_index') }}">back to list</a>

    <a href="{{ path('element_edit', {'id': element.id}) }}">edit</a>

    {{ include('element/_delete_form.html.twig') }}
