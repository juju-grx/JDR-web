<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="stylesheet" href="https://bootswatch.com/5/cosmo/bootstrap.min.css">

		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">

			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('home') }}">SymBlog</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							{% if app.user %}
								<a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
							{% else %}
								<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
							{% endif %}
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<div class="container"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
